<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rx06Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startWith 合并操作符"
            android:onClick="click01"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="concatWith 合并操作符"
            android:onClick="click02"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="concat 合并操作符"
            android:onClick="click03"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="merge 合并操作符"
            android:onClick="click04"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zip 合并操作符"
            android:onClick="click05"/>

    </LinearLayout>
</ScrollView>
